import axios from "axios";

// Base URL for JSON Server
const API_URL = "http://localhost:4200/careerrequests";

// ✅ Fetch all career requests
export const fetchCareerRequests = async () => {
  try {
    const response = await axios.get(API_URL);
    return response.data;
  } catch (error) {
    console.error("Error fetching career requests:", error);
    return [];
  }
};

// ✅ Save a new career request
export const createCareerRequest = async (requestData) => {
  try {
    const response = await axios.post(API_URL, requestData);
    return response.data;
  } catch (error) {
    console.error("Error creating career request:", error);
    throw error;
  }
};

// ✅ Update request status (e.g., mark as completed)
export const updateCareerRequestStatus = async (id, status) => {
  try {
    const response = await axios.patch(`${API_URL}/${id}`, { status });
    return response.data;
  } catch (error) {
    console.error("Error updating career request status:", error);
    throw error;
  }
};